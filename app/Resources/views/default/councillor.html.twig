{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Data Table</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Code</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for c in councillors %}
                    <tr>
                        <td>{{ c.id }}</td>
                        <td>{{ c.firstName }}</td>
                        <td>{{ c.lastName }}</td>
                        <td>{{ c.code }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}